env = Environment(
	CXXFLAGS=['-std=c++11', '-O0', '-g', '-Wall']
)

env.ParseConfig(
	'pkg-config --cflags --libs libavformat-ffmpeg libavutil-ffmpeg libavcodec-ffmpeg')

env.Program('metadata.cpp')
env.Program('video_geometry.cpp')
env.Program('extract_from_mp4.cpp')
env.Program('read_n_frames.cpp')
env.Program('list_input_formats.cpp')
